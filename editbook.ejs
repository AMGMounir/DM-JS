
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Éditer un livre</title>
</head>
<body>
  <h1>Éditer un livre</h1>
  <form action="/books/edit/<%= book._id %>" method="post">
    <label for="titre">Titre :</label>
    <input type="text" name="titre" value="<%= book.titre %>" required><br>
    <label for="auteur">Auteur :</label>
    <select name="auteur" required>
      <% authors.forEach(author => { %>
        <option value="<%= author._id %>" <%= book.auteur._id.equals(author._id) ? 'selected' : '' %>><%= author.prenom %> <%= author.nom %></option>
      <% }); %>
    </select><br>
    <label for="resume">Résumé :</label>
    <textarea name="resume" required><%= book.resume %></textarea><br>
    <label for="isbn">ISBN :</label>
    <input type="text" name="isbn" value="<%= book.isbn %>" required><br>
    <button type="submit">Mettre à jour</button>
  </form>
  <a href="/books">Retour à la liste des livres</a>
</body>
</html>
